<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="AvaloniaProj.MainWindow"
        Title="Generador de Instaladores"
        Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Generador de Instaladores" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Text="Sistema Operativo:"/>
        <ComboBox x:Name="SistemaOperativoComboBox" Margin="0,5,0,15">
            <ComboBoxItem Content="Windows"/>
            <ComboBoxItem Content="Linux"/>
        </ComboBox>
        
        <TextBlock Text="Fuentes de Ingesta:"/>
        <StackPanel Orientation="Vertical" Margin="0,5,0,15">
            <CheckBox Content="Application" x:Name="ApplicationCheckBox"/>
            <CheckBox Content="Security" x:Name="SecurityCheckBox"/>
            <CheckBox Content="System" x:Name="SystemCheckBox"/>
        </StackPanel>
        
        <Button Content="Generar Instalador" Click="GenerarInstalador_Click"/>
        
        <TextBlock x:Name="ResultadoTextBlock" Text="" Foreground="Green" Margin="0,20,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
